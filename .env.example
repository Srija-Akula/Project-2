# ===========================
# GENERAL PROJECT SETTINGS
# ===========================
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

SECRET_KEY=YOUR_DJANGO_SECRET_KEY_HERE

# ===========================
# DATABASE (PostgreSQL)
# ===========================
DB_NAME=socialapp
DB_USER=socialuser
DB_PASSWORD=socialpassword
DB_HOST=db
DB_PORT=5432

# ===========================
# REDIS (for Channels)
# ===========================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# ===========================
# DJANGO CHANNELS
# ===========================
CHANNEL_LAYERS_BACKEND=channels_redis.core.RedisChannelLayer

# ===========================
# DJANGO REST FRAMEWORK + JWT
# ===========================
JWT_ACCESS_TOKEN_LIFETIME=30         # minutes
JWT_REFRESH_TOKEN_LIFETIME=1         # day
JWT_ALGORITHM=HS256
JWT_SIGNING_KEY=YOUR_JWT_SIGNING_KEY

# ===========================
# EMAIL (optional: verification, password reset)
# ===========================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=YOUR_EMAIL@gmail.com
EMAIL_HOST_PASSWORD=YOUR_EMAIL_PASSWORD
EMAIL_USE_TLS=True

# ===========================
# MEDIA & STATIC FILES
# ===========================
MEDIA_URL=/media/
STATIC_URL=/static/

# If using AWS S3 in production:
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION=ap-south-1

# ===========================
# CORS (React frontend)
# ===========================
CORS_ALLOW_ORIGINS=http://localhost:3000

# ===========================
# OPTIONAL: CELERY
# ===========================
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
