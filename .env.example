# Django Secret Key (use a real secret in Render)
SECRET_KEY=your-secret-key

# Debug: True for local development, False for production
DEBUG=True

# Database URL (in Render you will replace with real DATABASE_URL)
DATABASE_URL=postgres://username:password@host:port/dbname

# Allowed Hosts separated by commas
ALLOWED_HOSTS=localhost,127.0.0.1

# (Optional: Email config â€” only if your project uses email)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=you@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True
